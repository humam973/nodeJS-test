<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs')%>

<body>
    
    <%- include('./partials/nav.ejs') %>
    
    <h2 class="body-titles">All notes</h2>

    <div class="all-notes">
        
        <% if(notes.length > 0){ %>
            <% notes.forEach(note => { %>
                <div class="the-note">
                <h4><%= note.title %></h4>
                <p><%= note.snippet %></p>
                </div>
           <% })} else {  %>
            <p>There ara no notes to display on the board</p>
        <% } %>

    </div>

    <%- include('./partials/footer.ejs') %>

</body>
</html>
